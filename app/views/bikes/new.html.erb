<div class="container">
  <div class="row">
    <div class="col-lg-6">
      <%= simple_form_for @bike  do |f| %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price_per_hour %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
