<%= render 'top_navbar' %>
<div class="container pt-small bottom-spacer ">
  <a data-toggle="collapse" href="#collapseAddform" role="button">
    <div class="w-80 dash-border border-info rounded d-flex p-3 justify-content-center align-items-center my-1">
      <i class="fas fa-plus-square fa-2x text-info" id="add-bike-button"></i>
    </div>
  </a>
  <div class="collapse w-75 mx-auto" id="collapseAddform">
    <%= simple_form_for @bike  do |f| %>
      <%= f.input :name, placeholder: 'Beau VTT' %>
      <%= f.input :description, placeholder: 'Six vitesses, grande taille.'%>
      <%= f.input :price_per_hour %>
      <%= f.input :photo, as: :file %>
      <%= f.button :submit, class: 'btn btn-primary btn-block mb-2' %>
    <% end %>
  </div>
  <% @bikes.each do |bike| %>
    <%= render 'my_bike_card', bike: bike %>
  <% end %>
</div>
